{{> navbar}}
<div class="container mt-3">

  <div class="row">
    <div class="col-md-6">
      <img class="img-thumbnail" src="{{image_product}}" width="450px" height="450px">
    </div>
    <div class="col-md-6">
      <h2>{{title}}</h2>
      <p>
        <i>
          {{category}}
        </i>
      </p>
      <p>
        {{description_product}}
      </p>
      <p class="size-font">
        ${{price}}
      </p>
      <div class="mt-3 d-flex gap-2">
        <a href="/products/{{id}}/update">
          <button class="btn btn-primary">Editar</button>
        </a>
        <form action="/products/{{id}}/delete" method="POST">
          <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
      </div>
      {{> backhome}}
    </div>
  </div>
</div>